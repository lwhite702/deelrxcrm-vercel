{
  "include": [
    "app/**/*",
    "components/**/*", 
    "lib/**/*",
    "middleware.ts",
    "next.config.ts",
    "tailwind.config.ts",
    "drizzle.config.ts",
    "scripts/**/*",
    "tests/**/*",
    "__tests__/**/*"
  ],
  "entry": [
    "app/**/*.{ts,tsx}",
    "components/**/*.{ts,tsx}",
    "lib/**/*.{ts,tsx}",
    "middleware.ts",
    "next.config.ts"
  ],
  "project": [
    "app/**/*.{ts,tsx}",
    "components/**/*.{ts,tsx}",
    "lib/**/*.{ts,tsx}",
    "middleware.ts"
  ],
  "ignore": [
    "_archive/**",
    "node_modules/**",
    ".next/**",
    "dist/**",
    "out/**",
    "coverage/**",
    "**/*.config.js",
    "**/*.config.mjs"
  ],
  "ignoreDependencies": [
    "@types/*",
    "eslint*",
    "prettier",
    "typescript",
    "tsx"
  ],
  "rules": {
    "files": "error",
    "dependencies": "warn",
    "devDependencies": "warn",
    "exports": "warn",
    "types": "warn"
  }
}