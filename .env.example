# Database (Neon Postgres)
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require
DATABASE_URL_UNPOOLED=postgresql://username:password@host:port/database?sslmode=require

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...
CLERK_WEBHOOK_SECRET=whsec_...
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/login
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/signup

# Stripe Payments
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Application URLs
NEXT_PUBLIC_SITE_URL=http://localhost:3000
APP_URL=http://localhost:3000
BASE_URL=http://localhost:3000

# Vercel Blob Storage (Vercel provides automatically in production)
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_...

# Dual Blob Storage (Optional: separate tokens for private/public stores)
# If not provided, will fallback to BLOB_READ_WRITE_TOKEN
# BLOB_READ_WRITE_TOKEN_PRIVATE=vercel_blob_rw_...  # Private store token
# BLOB_READ_WRITE_TOKEN_PUBLIC=vercel_blob_rw_...   # Public store token
# Optional: Super Admin User IDs (comma-separated)
NEXT_PUBLIC_SUPER_ADMIN_USER_IDS=user_123,user_456

# Optional: CORS Origins (comma-separated)
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# Upstash Redis for rate limiting/caching
UPSTASH_REDIS_KV_URL=rediss://default:token@host.upstash.io:6379
UPSTASH_REDIS_KV_REST_API_URL=https://host.upstash.io
UPSTASH_REDIS_KV_REST_API_TOKEN=your-token
UPSTASH_REDIS_KV_REST_API_READ_ONLY_TOKEN=your-read-only-token

# Encryption keys for field-level encryption
ENCRYPTION_KEY=32-char-hex-key-for-aes-256-encryption
ENCRYPTION_KEY_ROTATION_DATE=2025-09-23

# Inngest Background Jobs
INNGEST_SIGNING_KEY=signkey-...
INNGEST_EVENT_KEY=...

# Knock Notifications
KNOCK_API_KEY=sk_test_...
NEXT_PUBLIC_KNOCK_PUBLIC_API_KEY=pk_test_...

# Resend Email + Transactional Mailer
RESEND_API_KEY=re_...
EMAIL_FROM="DeelRxCRM <no-reply@deelrxcrm.app>"
# Optional reply-to override (defaults to EMAIL_FROM)
# EMAIL_REPLY_TO=support@deelrxcrm.app

# JWT Authentication (custom HMAC tokens)
JWT_SECRET=super-secure-shared-secret
# Optional audience / issuer checks
# JWT_ISSUER=deelrxcrm.app
# JWT_AUDIENCE=deelrxcrm.tenants

# Sentry Error Monitoring
NEXT_PUBLIC_SENTRY_DSN=https://...@sentry.io/...
SENTRY_ORG=your-org
SENTRY_PROJECT=your-project
SENTRY_AUTH_TOKEN=...

# Statsig Feature Flags
STATSIG_SERVER_SECRET_KEY=secret-...
NEXT_PUBLIC_STATSIG_CLIENT_KEY=client-...

# Encryption keys for field-level encryption
ENCRYPTION_KEY=32-char-hex-key-for-aes-256-encryption
ENCRYPTION_KEY_ROTATION_DATE=2025-09-23

# Rate Limiting (Optional: Redis for distributed rate limiting)
RATE_LIMIT_REDIS_URL=redis://...
RATE_LIMIT_REDIS_TOKEN=...

# Optional: MCP Services
CONTEXT7_API_KEY=
GITHUB_MCP_PAT=
CODACY_ACCOUNT_TOKEN=
