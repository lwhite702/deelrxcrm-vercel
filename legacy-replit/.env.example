# === BETA SECURITY SETTINGS ===
# Enable SEO blocking headers (X-Robots-Tag)
BETA_NOINDEX=true

# Enable basic HTTP authentication for beta access
# Set to '1' or 'true' to enable, '0' or 'false' to disable
BETA_BASIC_AUTH=0

# Basic authentication credentials (required if BETA_BASIC_AUTH is enabled)
BETA_USER=beta
BETA_PASS=access

# Support contact email for beta landing page
VITE_SUPPORT_EMAIL=support@deelzrxcrm.com

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/pharmacare_db"
PGHOST="localhost"
PGPORT="5432"
PGDATABASE="pharmacare_db"
PGUSER="username"
PGPASSWORD="password"

# Authentication (Replit Auth)
SESSION_SECRET="your-super-secret-session-key-change-this-in-production"
REPL_ID="your-replit-app-id"
ISSUER_URL="https://replit.com/oidc"
REPLIT_DOMAINS="your-domain.repl.co,your-custom-domain.com"

# Stripe Payment Processing (Optional - for payments module)
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
VITE_STRIPE_PUBLIC_KEY="pk_test_your_stripe_public_key"
STRIPE_PRICE_ID="price_your_subscription_price_id"

# Application Configuration
NODE_ENV="development"
PORT="5000"

# Feature Flags (Default enabled modules)
DEFAULT_ENABLED_MODULES="dashboard,inventory,customers,sales,delivery,loyalty,credit,payments"

# CORS and Security
ALLOWED_ORIGINS="http://localhost:5000,https://your-domain.com"

# Email Configuration (Optional - for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Geocoding Service (Optional - for delivery)
GEOCODING_API_KEY="your-geocoding-api-key"

# Background Jobs
REDIS_URL="redis://localhost:6379"

# Monitoring and Logging
LOG_LEVEL="info"
SENTRY_DSN="your-sentry-dsn-for-error-tracking"

# File Storage (Optional)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_S3_BUCKET="your-s3-bucket-name"
AWS_REGION="us-east-1"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# Cache Configuration
CACHE_TTL="3600"
CACHE_PREFIX="pharmacare:"

# Webhook Configuration
WEBHOOK_SECRET="your-webhook-secret-for-stripe"

# Multi-tenant Configuration
MAX_TENANTS_PER_USER="5"
DEFAULT_TENANT_STATUS="trial"
TRIAL_PERIOD_DAYS="30"

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS="30"
